{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"types": ["bun"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["dist", "node_modules"]
}
